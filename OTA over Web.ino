  AsyncElegantOTA.begin(&server);
  // Start server
  server.begin();
}

void loop() {
    if (!client.connected()) {
    reconnect();
  }
  ws.cleanupClients();
   long distance = ultrasonic.read();

  // If distance is less than 10 cm, set ledState to HIGH (1), otherwise LOW (0)
  if (distance < 10) {
    ledState = 1;
  } else {
    ledState = 0;
  }
   String data = String(distance);
  client.publish(mqttTopic, data.c_str());

  Serial.println("Published to MQTT: " + data);

  delay(1000);

  digitalWrite(ledPin, ledState);
}